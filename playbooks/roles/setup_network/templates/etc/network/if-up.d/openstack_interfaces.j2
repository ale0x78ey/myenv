#!/bin/bash

if [ "$IFACE" != {{ network_interfaces[inventory_hostname].gateway.name }} ]; then
  exit 0
fi

ip link add link {{ network_interfaces[inventory_hostname].gateway.name }} \
            name {{ kolla_network_interface }} type macvlan mode bridge

ip link add link {{ network_interfaces[inventory_hostname].gateway.name }} \
            name {{ kolla_neutron_external_interface }} type macvtap

ip addr add {{ network_interfaces[inventory_hostname][kolla_network_interface].cidr }} \
        dev {{ kolla_network_interface }}

ip link set {{ kolla_network_interface }} up
ip link set {{ kolla_neutron_external_interface }} up
